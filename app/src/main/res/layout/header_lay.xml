<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@color/purple_200"
    android:layout_height="220dp">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_user_image"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/hami"/>

    <TextView
        android:id="@+id/nav_user_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hamayun Hanif"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>
    
    <TextView
        android:id="@+id/nav_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hamayunhanid121@gmail.com"
        android:textSize="18sp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/nav_user_bloodgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bitm-F19-091"
        android:textSize="18sp"
        android:textColor="@color/white"/>








    





</LinearLayout>